<% layout('landing-page') %>

<div class="d-flex" id="wrapper">
  <% include ../partials/landing-page/sidebar %>
    <div id="page-content-wrapper">
      <% include ../partials/landing-page/navbar %>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="ul-links">
                <ul>
                    <li><a href="/home">Home</a></li> |
                        <li><a href="">Company</a></li>|
                        <li><a href="">Register Company</a></li>
                </ul>
            </div>
        </nav>
        <div class="container-fluid">
            <div class="body-div">
                <h4>Companies</h4>
            <div class="row">
                    <% for(var i = 0; i < data.length; i++) {%>
                    <div class="col-md-6 col-xs-12 col-lg-4">
                        <a href="">
                        <div class="card shadow card-accent-dark border-dark mt-4" style="width: 18rem;">
                            <img class="card-img-top" src="/uploads/<%= data[i].image %>" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title"><%= data[i].name %></h5><hr>
                            </a>   
                                <span><i class="fa fa-star"></i></span><br>
                                <span><i class="fa fa-building-o"></i> <%= data[i].sector %> </span><br>
                                <span><i class="fa fa-map-marker"></i> <%= data[i].city %> , <%= data[i].country %> </span>
                            </div> 
                            <div class="card-footer">
                                <small class="text-muted">Last updated 3 mins ago</small>
                            </div>
                        </div>
                    </div>
                <% } %>     
            </div>
        </div>
        </div>       
    </div>
</div>
   
   
